package com.demo.stack;

public class MyStackList {
	Node top;
	class Node{
	private	Node next;
	private	int data;
	
	public Node(int data) {
		super();
		this.data = data;
		this.next = null;
	}
	}

	public MyStackList() {
		super();
		top  = null;
	}
	public boolean isEmpty()
	{
		return top==null;
	}
	public void push(int value)
	{
		Node newNode = new Node(value);
		newNode.next = top;
		top = newNode;
		System.out.println("top is "+top.data);
		System.out.println(top.data+" Added successfully");
	}
	public int pop()
	{
		if(!isEmpty())
		{
			System.out.println("top in pop "+top.data);
			 int value = top.data;
			 top = top.next;
			 System.out.println("deleted successfully-->"+value);
			 return value;
		}
		System.out.println("not deleted cause it empty");
		return -1;
	}
	public void display()
	{
		Node temp=top;
		while(temp!=null)
		{
		  System.out.print(temp.data+" --->");
		  temp=temp.next;
		}
		System.out.println();
	}
	
  }
