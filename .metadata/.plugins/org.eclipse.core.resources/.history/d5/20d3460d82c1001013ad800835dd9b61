package com.demo.searching;

public class Searching {
	
	public static int seqentialSearch(int [] arr,int value)
	{
		int cnt =0;
		for(int i=0;i<arr.length;i++)
		{
			if(arr[i]==value)
			{
				cnt++;
				System.out.println("the "+cnt+" Iteration");
				return i;
			}
			//cnt++;
			//System.out.println("the "+cnt+" Iteration");
			
			
		}
		cnt++;
		System.out.println("the "+cnt+" Iteration");
		return -1;
	}

	public static int binarySearchWithoutRecursion(int[] arr, int value) {
		int cnt=0;
		int low =0;
		int high = arr.length-1;
		while(low<=high)
		{
			int mid = (low+high)/2;
			if(arr[mid]==value)
			{
				cnt++;
				System.out.println("The "+cnt+" ----Iteration");
				return mid;
			}
			if(value<mid)
			{
				high = mid-1;
				cnt++;
				System.out.println("The "+cnt+" ----Iteration");
			}
			else
			{
				low = mid+1;
				cnt++;
				System.out.println("The "+cnt+" ----Iteration");
			}
		}
		System.out.println("The "+cnt+" ----Iteration");
		return -1;
	}

	public static int binarySearchRecursion(int[] arr, int ele, int low, int high) {
		System.out.println("Binary Search called: "+low+"------"+high);
		
		if(low<=high)
		{
		 int mid = (low+high)/2;
		if(arr[mid]==ele)
		{
			return mid;
		}
		if(ele<arr[mid])
		{
			return binarySearchRecursion(arr,ele,low,mid-1);
		}
		else
		{
			return binarySearchRecursion(arr,ele,mid+1,high);
		}
		}
		return -1;
	}
}
